<?xml version="1.0"?>
<blog>
    <xmacro_define_value name="v1" value="0.2" />
    <xmacro_define_value name="v2" value="0.3" />
    <xmacro_define_block name = "story" params="prefix data">
        <title name="${prefix}_title">abc:${data}</title>
        <context name="${prefix}_context">context....</context>
    </xmacro_define_block>
    <!--blog-->
    <xmacro_block name="story" prefix="story1" data='${v1}'/>
    <xmacro_block name="story" prefix="story2" data="${v2}"/>
    <other_content score="${v1+v2}">
            <xmacro_block name="story" prefix="story3" data="${v1}+${v2}"/>
    </other_content>
</blog>
