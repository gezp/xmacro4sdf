<?xml version="1.0"?>
<blog>
    <xmacro_define_value name="v1" value="0.2" />
    <xmacro_define_value name="v2" value="0.3" />
    <xmacro_define_block name = "story" params="prefix data">
        <title name="${prefix}_title">abc:${data}</title>
        <context name="${prefix}_context">context....</context>
    </xmacro_define_block>
    <xmacro_define_block name = "floder" params="prefix">
        <xmacro_block name="story" prefix="${prefix}_story1" data='1.0'/>
        <xmacro_block name="story" prefix="${prefix}_story2" data='2.0'/>
    </xmacro_define_block>
    <!--blog-->
    <xmacro_block name="floder" prefix="floder1"/>
    <xmacro_block name="floder" prefix="floder2" data='2.0'/>
    <xmacro_block name="story" prefix="story3" data="${v2}"/>
</blog>
